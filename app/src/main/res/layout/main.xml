<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentImage"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/currentImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cat"
        android:layout_gravity="center"
        android:layout_below="@+id/image" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentImage">

    <TextView
        android:id="@+id/textSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectSize"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:id="@+id/selectSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textSelect"
        android:layout_toRightOf="@+id/textSelect"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/selectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectImage"
        android:layout_gravity="center"
        android:layout_below="@+id/textSelect"
        android:layout_centerHorizontal="true"
    />

    <Button android:id="@+id/newGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startNew"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/selectImage" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >
        <!--android:layout_below="@+id/rl"-->

    <Button
        android:id="@+id/highScores"
        android:layout_width="70px"
        android:layout_height="70px"
        android:text="@string/highScore" />

</RelativeLayout>

</RelativeLayout>